<div class="text-center">
  <h2>{{title}}</h2>
  <p>{{content}}</p>
  <p>Created by {{user.name}} on {{format_date date_posted}}</p>
  <p>
  </p>
  {{#if comments}}
  <div>
    {{#each comments as |comment|}}
    {{> comments}}
    {{/each}}
  </div>
  {{/if}}
</div>
    <h4>Add a Comment:</h4>
    <form class="form new-comment-form" data-id="{{id}}">
      <div class="form-group">
        <label for="post-content">Comment:</label>
        <textarea class="form-input" id="comment-content" name="comment-content"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
      </div>
    </form>
    <script src="/js/posts.js"></script>
  </div>
